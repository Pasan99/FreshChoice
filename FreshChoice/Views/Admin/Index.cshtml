@model FreshChoice.ViewModels.Admin.DashBoardViewModel
@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
<div class="row">
    <div class="col">
        <h1>Sales Value by Category</h1>
    </div>
    <div class="col">
        <h2 class="float-right">LKR @String.Format("{0:n}", Model.TotalSales)</h2>
    </div>
</div>

<hr />
<canvas id="myChart" width="400" height="100"></canvas>
<input hidden id="labels" value="@(Json.Encode( Model.CategorySalesItems.Select(s=> s.CategoryName).Distinct().ToArray()))" />
<input hidden id="data" value="@(Json.Encode( Model.DataJson.ToArray()))" />
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    console.log($("#labels").val());
    var array = JSON.parse($("#labels").val());
    var data = JSON.parse($("#data").val());
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: array,
            datasets: [{
                label: '# of Votes',
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>


<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>